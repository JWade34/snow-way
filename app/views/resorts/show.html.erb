<div class="min-h-screen">
  <!-- Header -->
  <header class="px-6 py-4 flex items-center justify-between border-b border-slate-800">
    <%= link_to root_path, class: "text-2xl font-extrabold tracking-tight" do %>
      <span class="text-white">SNOW</span><span class="text-cyan-400">WAY</span>
    <% end %>
    <nav class="flex gap-4">
      <%= link_to "Weather", weather_index_path, class: "text-slate-400 hover:text-white transition text-sm" %>
      <%= link_to "All Resorts", resorts_path, class: "text-slate-400 hover:text-white transition text-sm" %>
    </nav>
  </header>

  <main class="max-w-4xl mx-auto px-6 py-8">
    <!-- Resort Header -->
    <div class="text-center mb-10">
      <p class="text-slate-500 text-sm uppercase tracking-widest mb-2"><%= @resort.state_province %>, <%= @resort.country %></p>
      <h1 class="text-4xl md:text-5xl font-extrabold mb-4"><%= @resort.name %></h1>

      <!-- Big Snow Number -->
      <div class="text-6xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-b from-white to-cyan-300 mb-2">
        <%= @resort.projected_snowfall_7_day %><span class="text-4xl">"</span>
      </div>
      <p class="text-slate-400">projected in 7 days</p>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-3 gap-2 sm:gap-4 mb-10">
      <div class="bg-slate-800/50 border border-slate-700 rounded-xl p-4 text-center">
        <p class="text-2xl font-bold"><%= @resort.nearest_airport_code %></p>
        <p class="text-slate-400 text-sm">Airport</p>
      </div>
      <div class="bg-slate-800/50 border border-slate-700 rounded-xl p-4 text-center">
        <p class="text-2xl font-bold"><%= number_with_delimiter(@resort.elevation_summit) %>'</p>
        <p class="text-slate-400 text-sm">Summit</p>
      </div>
      <div class="bg-slate-800/50 border border-slate-700 rounded-xl p-4 text-center">
        <p class="text-2xl font-bold"><%= number_with_delimiter(@resort.elevation_base) %>'</p>
        <p class="text-slate-400 text-sm">Base</p>
      </div>
    </div>

    <!-- Recent Snowfall -->
    <% if @resort.recent_snowfall_48h > 0 %>
      <div class="mb-10">
        <div class="bg-gradient-to-r from-amber-500/20 to-orange-500/20 border border-amber-500/30 rounded-xl p-6 text-center">
          <p class="text-amber-400 text-sm uppercase tracking-widest mb-2">Last 48 Hours</p>
          <p class="text-5xl font-extrabold text-white mb-1">
            <%= @resort.recent_snowfall_48h %><span class="text-3xl">"</span>
          </p>
          <p class="text-slate-400 text-sm">of fresh snow</p>
        </div>
      </div>
    <% end %>

    <!-- 7-Day Forecast -->
    <div class="mb-10">
      <h2 class="text-xl font-bold mb-4">7-Day Forecast</h2>
      <div class="flex gap-2 overflow-x-auto pb-2">
        <% @daily_forecasts.each do |forecast| %>
          <div class="flex-1 min-w-[4.5rem] bg-slate-800/50 border border-slate-700 rounded-lg p-3 text-center">
            <p class="text-slate-400 text-xs mb-1"><%= forecast.forecast_date.strftime("%a") %></p>
            <p class="text-lg font-bold <%= forecast.snowfall_inches.to_f > 5 ? 'text-cyan-400' : 'text-white' %>">
              <%= forecast.snowfall_inches.to_f.round(1) %>"
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Home Airport Selector -->
    <div class="mb-6">
      <%= render "shared/home_airport" %>
    </div>

    <!-- Book Your Trip -->
    <div class="mb-10">
      <h2 class="text-xl font-bold mb-4">Book Your Trip</h2>

      <% departure_date = (Date.today + 2.days).strftime("%Y-%m-%d") %>
      <% return_date = (Date.today + 5.days).strftime("%Y-%m-%d") %>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
        <!-- Flights -->
        <a href="https://www.kayak.com/flights/<%= @resort.nearest_airport_code %>/<%= departure_date %>/<%= return_date %>?sort=bestflight_a"
           data-flight-link="true"
           data-destination="<%= @resort.nearest_airport_code %>"
           target="_blank"
           rel="noopener"
           class="bg-slate-800/50 hover:bg-slate-700/50 border border-slate-700 hover:border-cyan-500 rounded-xl p-5 transition group text-center">
          <div class="w-12 h-12 bg-cyan-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </div>
          <h3 class="font-bold group-hover:text-cyan-400 transition mb-1">Flights</h3>
          <p class="text-slate-400 text-xs" data-flight-label>to <%= @resort.nearest_airport_code %></p>
        </a>

        <!-- Rental Cars -->
        <a href="https://www.kayak.com/cars/<%= @resort.nearest_airport_code %>/<%= departure_date %>/<%= return_date %>?sort=price_a"
           target="_blank"
           rel="noopener"
           class="bg-slate-800/50 hover:bg-slate-700/50 border border-slate-700 hover:border-cyan-500 rounded-xl p-5 transition group text-center">
          <div class="w-12 h-12 bg-cyan-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
            </svg>
          </div>
          <h3 class="font-bold group-hover:text-cyan-400 transition mb-1">Rent a 4x4</h3>
          <p class="text-slate-400 text-xs">at <%= @resort.nearest_airport_code %></p>
        </a>

        <!-- Hotels -->
        <a href="https://www.kayak.com/hotels/<%= @resort.name.parameterize %>/<%= departure_date %>/<%= return_date %>/2guests?sort=distance_a"
           target="_blank"
           rel="noopener"
           class="bg-slate-800/50 hover:bg-slate-700/50 border border-slate-700 hover:border-cyan-500 rounded-xl p-5 transition group text-center">
          <div class="w-12 h-12 bg-cyan-500/20 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="font-bold group-hover:text-cyan-400 transition mb-1">Hotels</h3>
          <p class="text-slate-400 text-xs">near resort</p>
        </a>
      </div>

      <p class="text-slate-500 text-sm text-center mt-4">
        Dates: <%= departure_date %> to <%= return_date %> (adjust on booking site)
      </p>
    </div>

    <!-- Resort Website -->
    <div class="text-center mb-10">
      <a href="<%= @resort.website_url %>"
         target="_blank"
         rel="noopener"
         class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition">
        Visit <%= @resort.name %> Website
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    </div>

    <!-- Back Links -->
    <div class="flex justify-center gap-6">
      <%= link_to root_path, class: "text-slate-400 hover:text-white transition" do %>
        &larr; Home
      <% end %>
      <%= link_to resorts_path, class: "text-slate-400 hover:text-white transition" do %>
        All Resorts
      <% end %>
    </div>
  </main>
</div>
