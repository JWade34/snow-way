<div class="min-h-screen">
  <!-- Header -->
  <header class="px-6 py-4 flex items-center justify-between border-b border-slate-800">
    <%= link_to root_path, class: "text-2xl font-extrabold tracking-tight" do %>
      <span class="text-white">SNOW</span><span class="text-cyan-400">WAY</span>
    <% end %>
    <%= link_to resorts_path, class: "text-slate-400 hover:text-white transition text-sm" do %>
      All Resorts
    <% end %>
  </header>

  <main class="max-w-4xl mx-auto px-6 py-8">
    <!-- Title -->
    <div class="mb-8">
      <h1 class="text-3xl font-extrabold mb-2">Live Conditions</h1>
      <p class="text-slate-400">Current weather at top powder destinations</p>
    </div>

    <!-- Weather Grid -->
    <div class="space-y-4">
      <% @weather_data.each do |weather| %>
        <%= link_to resort_path(weather.resort.slug), class: "block bg-slate-800/50 hover:bg-slate-700/50 border border-slate-700 hover:border-slate-600 rounded-xl p-5 transition" do %>
          <div class="flex items-center gap-4">
            <!-- Weather Icon -->
            <div class="w-14 h-14 rounded-full flex items-center justify-center text-3xl <%= weather.snowing? ? 'bg-cyan-500/20' : 'bg-slate-700' %>">
              <%= weather.weather_icon %>
            </div>

            <!-- Resort Info -->
            <div class="flex-1">
              <h3 class="font-bold text-lg"><%= weather.resort.name %></h3>
              <p class="text-slate-400 text-sm"><%= weather.weather_description %></p>
            </div>

            <!-- Stats -->
            <div class="flex gap-6 text-right">
              <!-- Temperature -->
              <div>
                <p class="text-2xl font-bold <%= weather.cold? ? 'text-cyan-400' : 'text-orange-400' %>">
                  <%= weather.temperature_f&.round %>¬∞F
                </p>
                <p class="text-slate-500 text-xs">Temp</p>
              </div>

              <!-- Wind -->
              <div class="hidden sm:block">
                <p class="text-xl font-bold text-white">
                  <%= weather.wind_speed_mph&.round %><span class="text-sm text-slate-400">mph</span>
                </p>
                <p class="text-slate-500 text-xs">Wind</p>
              </div>

              <!-- Snow Depth -->
              <div>
                <p class="text-xl font-bold text-white">
                  <%= weather.snow_depth_inches&.round || 0 %>"
                </p>
                <p class="text-slate-500 text-xs">Snow</p>
              </div>
            </div>

            <!-- Arrow -->
            <div class="text-slate-500">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>

          <% if weather.snowing? %>
            <div class="mt-3 flex items-center gap-2 text-cyan-400 text-sm">
              <span class="animate-pulse">‚ùÑÔ∏è</span>
              <span>Currently snowing!</span>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <% if @weather_data.empty? %>
        <div class="text-center py-12">
          <p class="text-slate-400">Unable to fetch weather data. Please try again later.</p>
        </div>
      <% end %>
    </div>

    <!-- Legend -->
    <div class="mt-8 p-4 bg-slate-800/30 rounded-xl">
      <h3 class="text-sm font-bold text-slate-400 mb-3">Weather Conditions</h3>
      <div class="flex flex-wrap gap-4 text-sm">
        <span>‚ùÑÔ∏è Snow</span>
        <span>üå®Ô∏è Snow showers</span>
        <span>‚òÅÔ∏è Cloudy</span>
        <span>‚òÄÔ∏è Clear</span>
        <span>üåßÔ∏è Rain</span>
        <span>üå´Ô∏è Fog</span>
      </div>
    </div>

    <!-- Data Source -->
    <p class="text-slate-600 text-xs text-center mt-6">
      Weather data from Open-Meteo.com ‚Ä¢ Updated in real-time
    </p>

    <!-- Back Links -->
    <div class="flex justify-center gap-6 mt-8">
      <%= link_to root_path, class: "text-slate-400 hover:text-white transition" do %>
        &larr; Home
      <% end %>
      <%= link_to resorts_path, class: "text-slate-400 hover:text-white transition" do %>
        All Resorts
      <% end %>
    </div>
  </main>
</div>
